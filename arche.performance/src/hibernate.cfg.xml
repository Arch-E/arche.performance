/**
 * Hibernate configuration file for ArchE concept mappings to database
 * 
 * @author Hyunwoo Kim
 *
 / 
 -->
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.bytecode.use_reflection_optimizer">false</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.password">ArchE</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/arche</property>
        <property name="hibernate.connection.username">ArchE</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>

        <!-- Enable Hibernate's automatic session context management -->
        <property name="current_session_context_class">thread</property>

        <!-- Disable the second-level cache  -->
        <property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>

        <!-- Echo all executed SQL to stdout -->
        <!--<property name="show_sql">true</property>-->
        
        <mapping resource="arche/performance/hibernate/vo/ArchEVersionVO.hbm.xml" />
        <mapping resource="arche/performance/hibernate/vo/ArchEResponsibilityVO.hbm.xml" />
        <mapping resource="arche/performance/hibernate/vo/ArchEResponsibilityStructureVO.hbm.xml" />
        <mapping resource="arche/performance/hibernate/vo/ArchEScenarioVO.hbm.xml" />
        <mapping resource="arche/performance/hibernate/vo/ArchETranslationRelationVO.hbm.xml" />
        <mapping resource="arche/performance/hibernate/vo/ArchERefinementRelationVO.hbm.xml" />
                  
        <mapping resource="arche/performance/hibernate/vo/ArchEResponsibilityDependencyRelationVO.hbm.xml" />
         <!--<mapping resource="arche/performance/hibernate/vo/ArchEResponsibilityInteractionRelationVO.hbm.xml" /> -->
        <mapping resource="arche/performance/hibernate/vo/ArchEResponsibilityReactionRelationVO.hbm.xml" />

        <!-- ArchE core design concepts -->
     	<mapping resource="arche/performance/hibernate/vo/ArchECoreModuleVO.hbm.xml" />
        <mapping resource="arche/performance/hibernate/vo/ArchECoreModuleDependencyRelationVO.hbm.xml" />
     	
        <!-- User-specific design concepts for modifiability -->
     	<mapping resource="arche/performance/hibernate/vo/ArchEModuleVO.hbm.xml" /> 
        <mapping resource="arche/performance/hibernate/vo/ArchEModuleDependencyRelationVO.hbm.xml" />
        <mapping resource="arche/performance/hibernate/vo/ArchEResponsibilityToModuleRelationVO.hbm.xml" />
               
    </session-factory>
</hibernate-configuration>
